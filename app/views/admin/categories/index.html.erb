 <div class="row">
  <div class=".col-xs-3">
    
    
<%= form_with url: admin_categories_path ,method: :post,model: @category, local: true do |f| %>
  <label>カテゴリー名</label>
  <%= f.label :name,'カテゴリー名' %>
   
  <label>画像</label>
  <%= f.text_field :name, class:'form-control'%>
 
 <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= f.submit '追加',class: 'btn btn-primary btn-block' %>
   </div>
<% end %>


     <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th>
             | カテゴリー名
           </th>
           <th></th>
         </tr>
       </thead>
       <tbody>
       <% @categories.each do |category| %>
         <tr>
            <td><%= category.name %></td>
            <td>
      <%= link_to '編集', edit_admin_category_path(category), class: 'btn-sm btn-primary' %>
       </td><td>
      <%= link_to '削除', admin_category_path(category), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger'%>
            </td>
         </tr>

       <% end %>
       </tbody>
     </table>
    
    
    
    </div>
  </div>
</div>