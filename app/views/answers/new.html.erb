<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-8">

<h2 class="mt-3">回答投稿</h2>

<p>＝質問内容＝</p>
<!-- -->
<p><%= @question.question_content %></p> 

<%= form_with(model: [@question, @answer], local: true) do |f| %>
  <div class="form-group">
  <label>回答文</label>
  <%= f.text_area :answer_content, class:"form-control book_body"%>
 </div>  
 <div class="form-group">
 <label>画像</label>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*",class:"book_body"%>
 </div>
 <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= f.submit '投稿',class:"btn btn-success me-md-2" %>
   </div>
<% end %>

</div>

</div>
</div>