<style>
  .bg01 {background: url("<%= asset_path('buncyo4.jpg') %>") #F8F9FB no-repeat bottom right/ contain;}
 </style>



<div class="container-fluid my-5 bg01">
 <div class="row py-5 px-5">
  <div class="border col-md-8 bg-white ">
    <div class="border px-5 my-3 bg-light text-dark text-center">
       <h3>カテゴリー：病気・ケガ</h3>
    </div>
   
     <table class="table table-hover table-inverse">

 
       <tbody>
       <% @illness_questions.each do |illness_question| %>
         <tr>
            <td><%=link_to illness_question.question_content, question_path(illness_question.id) %>
            <%= illness_question.created_at.strftime('%Y/%m/%d') %></td>
         </tr>

       <% end %>
       </tbody>
     </table>
    <%= paginate @illness_questions %>
    
    
    </div>
  </div>
</div>