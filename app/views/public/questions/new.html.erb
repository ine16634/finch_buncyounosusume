<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-8">

<h2 class="mt-3">質問投稿</h2>

<%= form_with model: @question do |f| %>
  <div class="form-group">
  <label>質問文</label>
  <%= f.text_area :question_content, class:"form-control book_body"%>
 </div>  
 <div class="form-group">
 <label>画像</label>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*",class:"book_body"%>
 </div>
 <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= f.submit '投稿',class:"btn btn-success me-md-2" %>
   </div>
<% end %>

</div>

</div>
</div>